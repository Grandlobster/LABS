#include<iostream>
#include<string>
using namespace std;
#define SIZE 10

class Juvenile{
    struct node{
        int data;
        string value;
        struct node *next;
    };
    struct node *head[SIZE];
public:
    Juvenile() {
        for(int i = 0; i < SIZE; ++i)
            head[i] = nullptr;
    }

    void insert(){
        int data_;
        string value_;
        cout<<"Enter the data :";
        cin>>data_;
        cout<<"Enter the value:";
        cin>>value_;
        struct node *nn = new node;
        nn->data = data_;
        nn->value = value_;
        nn->next = nullptr;

        int i = data_ % SIZE;
        if(head[i] == NULL){
            head[i] = nn;
        }
        else{
            node *temp = head[i];
            while(temp->next != NULL){
                temp = temp->next;
            }
            temp->next = nn;
        }
    }
void display() {
    for (int i = 0; i < SIZE; i++) {
        cout << "Hash Table at index " << i << ": ";

        if (head[i] == NULL) {
            cout << "Empty" << endl;
        } else {
            node *temp = head[i];
            while (temp != NULL) {
                cout << "Data is:\t" << temp->data << " Value is :\t" << temp->value << " -> ";
                temp = temp->next;
            }
            cout << "NULL" << endl;
        }
    }
}

