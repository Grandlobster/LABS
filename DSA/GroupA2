};

int main(){
    Juvenile h;
    int choice;
    do {
        cout << "\nMenu\n1. Insert\n2. Display\n3. Exit\nEnter choice: ";
        cin >> choice;
        switch (choice) {
            case 1:
            cout<<"INSERTING ELEMENT:\n";
                h.insert();
                break;
            case 2:
            cout<<"DISPLAY OF WHOLE LIST:\n";
                h.display();
                break;
            case 3:
                cout << "Exiting program\n";
                break;
            default:
                cout << "Invalid choice\n";
                break;
        }
    } while (choice != 3);

    return 0;
}
